{
  "name": "async-boardgame-service",
  "version": "1.0.0",
  "description": "A generic, pluggable platform for managing turn-based board games through RESTful web APIs",
  "main": "dist/index.js",
  "workspaces": [
    "games/*"
  ],
  "scripts": {
    "test": "jest --watch",
    "test:run": "jest",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=tests/integration --runInBand",
    "test:db": "jest --config jest.database.config.js",
    "build": "tsc",
    "build:web": "cd web-client && npm run build",
    "build:all": "npm run build && npm run build:web",
    "dev": "ts-node -r tsconfig-paths/register src/index.ts",
    "dev:web": "cd web-client && npm run dev",
    "dev:all": "concurrently \"npm run dev\" \"npm run dev:web\"",
    "start": "node dist/index.js",
    "lint": "eslint \"src/**/*.ts\" \"tests/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" \"tests/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "prepare": "husky",
    "generate:connect-four-svg": "ts-node games/connect-four/scripts/generate-svg-examples.ts"
  },
  "keywords": [
    "boardgame",
    "async",
    "turn-based",
    "rest-api"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@testcontainers/postgresql": "^11.10.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@types/pg": "^8.15.6",
    "@types/supertest": "^6.0.3",
    "@types/svgdom": "^0.1.2",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "concurrently": "^9.2.1",
    "eslint": "^8.56.0",
    "fast-check": "^4.3.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.1.1",
    "supertest": "^7.1.4",
    "testcontainers": "^10.28.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@clerk/express": "^1.7.52",
    "@svgdotjs/svg.js": "^3.2.5",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "pg": "^8.16.3",
    "svgdom": "^0.1.22",
    "uuid": "^13.0.0",
    "ws": "^8.18.3"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix",
      "prettier --write",
      "npm run test:run -- --bail --findRelatedTests --passWithNoTests"
    ],
    "tests/**/*.ts": [
      "eslint --fix",
      "prettier --write",
      "npm run test:run -- --bail --findRelatedTests"
    ],
    "web-client/src/**/*.{ts,tsx}": [
      "cd web-client && npm run lint",
      "cd web-client && npm run test:run"
    ]
  }
}
